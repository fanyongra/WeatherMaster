<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root_glance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:gravity="center_vertical">

    <TextClock
        android:id="@+id/widget_text_clock_glance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textFontWeight="600"
        android:textSize="60sp"
        android:format12Hour="hh:mm"
        android:format24Hour="HH:mm"
        android:textColor="@color/colorGlanceWidgetTextClock"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:includeFontPadding="false"
        android:shadowDy="2"
        android:shadowRadius="4" />

    <TextClock
        android:id="@+id/current_widget_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format12Hour="EEE d MMM"
        android:format24Hour="EEE d MMM"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="20sp"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/current_img_glance"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/sunny"
            android:paddingEnd="5dp"
            />
        <TextView
            android:id="@+id/current_glance_temp"
            android:layout_width="wrap_content"
            android:text="29° • "
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/current_glance_condition"
            android:layout_width="wrap_content"
            android:text="Clear sky"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:textColor="@color/white" />
</LinearLayout>

</LinearLayout>